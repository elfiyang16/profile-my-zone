{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
  ],
}
